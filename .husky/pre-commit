#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged
npx lint-staged

# Run tests
npm test

# Check TypeScript types
npm run type-check

# Run ESLint
npm run lint

# Run Prettier
npm run format

# Check for circular dependencies
npx madge --circular ./src

# Check for security vulnerabilities
npm audit

# Run build to ensure it compiles
npm run build 